{
  "manifest_version": 2,
  "name": "ZIPIT Steam Market Trade Checker",
  "version": "1.1.1",
  "description": "Help with verifying trades for Counter-Strike (CS:GO & CS2) items on Zipit.gg",
  "permissions": [
    "cookies",
    "storage",
    "activeTab",
    "alarms",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.zipit.gg/*",
        "http://*/*"
      ],
      "js": ["content.js"]
    }
  ]
}
